<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/main_container"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/dashboard_background"
  android:padding="16dp">

  <LinearLayout
    android:id="@+id/top_status_bar"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingVertical="8dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <TextView
      android:id="@+id/tv_connection_status"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="状态：未连接"
      android:textColor="@color/color_warning"
      android:textSize="16sp"
      android:layout_marginEnd="16dp"/>

    <!-- 电量显示 -->
    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:gravity="center_vertical">
      <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@android:drawable/ic_battery" />
      <TextView
        android:id="@+id/tv_battery_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100%"
        android:textSize="16sp"
        android:layout_marginStart="4dp"/>
    </LinearLayout>

    <!-- 灵活空间，可后续添加其他状态（如信号强度） -->
    <View
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:layout_weight="1" />

    <!-- 实时速度指示 -->
    <TextView
      android:id="@+id/tv_speed"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="速度：0"
      android:textSize="16sp"/>

  </LinearLayout>

  <!-- ==================== 2. 左侧摇杆控制区 ==================== -->
  <!-- 摇杆使用第三方库，这里预留一个自定义视图的位置 -->
  <cn.taketoday.robot.widget.JoystickView
    android:id="@+id/joystick"
    android:layout_width="180dp"
    android:layout_height="180dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toBottomOf="@id/top_status_bar"
    android:layout_marginStart="24dp"
    android:layout_marginBottom="24dp"
    android:layout_marginTop="24dp"/>

  <!-- 摇杆标签 -->
  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="摇杆控制"
    android:textSize="14sp"
    android:textColor="@color/secondary_text"
    app:layout_constraintTop_toBottomOf="@id/joystick"
    app:layout_constraintStart_toStartOf="@id/joystick"
    app:layout_constraintEnd_toEndOf="@id/joystick"/>

  <!-- ==================== 3. 中央核心状态区 ==================== -->
  <!-- 姿态球 (自定义视图) -->
  <cn.taketoday.robot.widget.AttitudeIndicatorView
    android:id="@+id/attitude_indicator"
    android:layout_width="120dp"
    android:layout_height="120dp"
    app:layout_constraintTop_toTopOf="@id/joystick"
    app:layout_constraintBottom_toTopOf="@id/central_control_panel"
    app:layout_constraintStart_toEndOf="@id/joystick"
    app:layout_constraintEnd_toStartOf="@id/right_action_panel"
    android:layout_marginStart="32dp"
    android:layout_marginEnd="32dp"/>

  <!-- 中央控制面板（模式切换） -->
  <LinearLayout
    android:id="@+id/central_control_panel"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    app:layout_constraintTop_toBottomOf="@id/attitude_indicator"
    app:layout_constraintStart_toEndOf="@id/joystick"
    app:layout_constraintEnd_toStartOf="@id/right_action_panel"
    android:layout_marginTop="24dp">

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="运动模式"
      android:textSize="16sp"
      android:textStyle="bold"
      android:layout_marginBottom="8dp"/>

    <!-- 模式切换按钮组 (使用ToggleButton实现单选效果) -->
    <RadioGroup
      android:id="@+id/rg_motion_mode"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

      <RadioButton
        android:id="@+id/rb_wheel_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="轮式"
        android:checked="true"
        style="@style/Widget.AppCompat.CompoundButton.RadioButton"/>

      <RadioButton
        android:id="@+id/rb_leg_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="足式"
        style="@style/Widget.AppCompat.CompoundButton.RadioButton"
        android:layout_marginStart="16dp"/>

      <RadioButton
        android:id="@+id/rb_mixed_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="混合"
        style="@style/Widget.AppCompat.CompoundButton.RadioButton"
        android:layout_marginStart="16dp"/>

    </RadioGroup>
  </LinearLayout>

  <LinearLayout
    android:id="@+id/right_action_panel"
    android:layout_width="wrap_content"
    android:layout_height="0dp"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    app:layout_constraintTop_toTopOf="@id/joystick"
    app:layout_constraintBottom_toBottomOf="@id/joystick"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginEnd="24dp"
    android:layout_marginTop="24dp"
    android:layout_marginBottom="24dp">

    <!-- 动作按钮：跳跃 -->
    <Button
      android:id="@+id/btn_jump"
      android:layout_width="100dp"
      android:layout_height="60dp"
      android:text="跳跃"
      android:textSize="18sp"
      style="@style/Widget.AppCompat.Button.Colored"
      android:backgroundTint="@color/color_accent"
      android:layout_marginBottom="16dp"/>

    <Button
      android:id="@+id/btn_stand"
      android:layout_width="100dp"
      android:layout_height="60dp"
      android:text="站立"
      android:textSize="18sp"
      style="@style/Widget.AppCompat.Button.Colored"
      android:backgroundTint="@color/color_primary"
      android:layout_marginBottom="16dp"/>

    <!-- 调试面板入口 -->
    <Button
      android:id="@+id/btn_debug_panel"
      android:layout_width="100dp"
      android:layout_height="wrap_content"
      android:text="调试"
      android:textSize="16sp"
      android:drawableStart="@mipmap/icon_headset"
      android:drawablePadding="4dp"
      style="@style/Widget.AppCompat.Button.Borderless"/>

  </LinearLayout>

  <!-- ==================== 5. 底部辅助功能区 ==================== -->
  <LinearLayout
    android:id="@+id/bottom_panel"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginBottom="8dp">

    <Button
      android:id="@+id/btn_settings"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="更多设置"
      android:drawableStart="@drawable/settings_black"
      android:drawablePadding="4dp"
      style="@style/Widget.AppCompat.Button.Borderless"/>

  </LinearLayout>

  <!-- ==================== 6. 全局悬浮紧急停止按钮 ==================== -->
  <!-- 使用高elevation使其悬浮在最上层 -->
  <Button
    android:id="@+id/btn_emergency_stop"
    android:layout_width="70dp"
    android:layout_height="70dp"
    android:text="停"
    android:textSize="20sp"
    android:textStyle="bold"
    android:background="@drawable/shape_emergency_button"
    android:elevation="24dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginBottom="24dp"
    android:layout_marginEnd="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>